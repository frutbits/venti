{
  "name": "venti",
  "version": "1.0.0",
  "description": "A Venti the bardâ€” A Discord music bot with Lavalink featured with an awesome new thing on Discord.",
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "build": "npm run prisma:generate && npm run lint && npm run compile",
    "compile": "tsc --build tsconfig.json",
    "lint": "eslint . --ignore-path .gitignore --ext .ts",
    "lint:fix": "eslint . --ignore-path .gitignore --ext .ts --fix",
    "start": "node --experimental-specifier-resolution=node dist/main",
    "start:dev": "rimraf ./dist && npm run compile && node --experimental-specifier-resolution=node --no-warnings dist/main",
    "prisma:generate": "prisma generate",
    "prisma:pull": "prisma db pull",
    "prisma:push": "prisma db push"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/frutbits/venti.git"
  },
  "keywords": [
    "js",
    "typescript"
  ],
  "author": "FrutBits Indonesia <contact@frutbits.net>",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/frutbits/venti/issues"
  },
  "homepage": "https://frutbits.org/",
  "engines": {
    "node": ">=16.6.0",
    "npm": ">=7.0.0"
  },
  "eslintConfig": {
    "extends": "@hazmi35/eslint-config/typescript",
    "ignorePatterns": "dist/*",
    "rules": {
      "@typescript-eslint/naming-convention": [
        "error",
        {
          "selector": "default",
          "format": [
            "camelCase",
            "PascalCase",
            "snake_case",
            "UPPER_CASE"
          ],
          "leadingUnderscore": "allow",
          "trailingUnderscore": "forbid"
        },
        {
          "selector": "variable",
          "modifiers": [
            "destructured"
          ],
          "format": null
        }
      ]
    }
  },
  "devDependencies": {
    "@hazmi35/eslint-config": "^8.4.2",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "eslint": "^8.17.0",
    "prisma": "^3.15.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.7.3"
  },
  "dependencies": {
    "@frutbits/pino-logger": "^2.0.3",
    "@lavalink/encoding": "^0.1.2",
    "@prisma/client": "^3.15.2",
    "@sapphire/decorators": "^4.3.6",
    "@sapphire/framework": "^3.0.0-next.fd7be0b.0",
    "@sapphire/plugin-editable-commands": "^1.2.0",
    "@sapphire/utilities": "^3.6.2",
    "discord-api-types": "^0.34.0",
    "discord.js": "^13.8.0",
    "dotenv": "^16.0.1",
    "got": "^12.1.0",
    "lavalink-api-types": "^0.1.9",
    "pino-pretty": "^8.0.0",
    "pretty-ms": "^8.0.0",
    "shoukaku": "^3.1.0",
    "tslib": "^2.4.0"
  }
}
